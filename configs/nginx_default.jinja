# Default server configuration
#
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;
    server_name _;
    location / {
	try_files $uri $uri/ =404;
    }
}

{% for site, info in STATICS.iteritems() %}
# {{ site }} server configuration
#
server {
    server_name {{ info.get('server_name') }};
    root {{ info.get('root') }};
    index index.html;
    {% if salt['file.directory_exists' ]('/etc/letsencrypt/live/' + info.get('server_name')) %}
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/{{ info.get('server_name') }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ info.get('server_name') }}/privkey.pem;
    {% else %}
    listen 80;
    {% endif %}
    location / {
	try_files $uri $uri/ =404;
    }
    location ~ /.well-known {
        allow all;
    }
}

{% if salt['file.directory_exists' ]('/etc/letsencrypt/live/' + info.get('server_name')) %}
server {
    listen 80;
    server_name {{ info.get('server_name') }};
    return 301 https://$host$request_uri;
}
{% endif %}
{% endfor %}

{% for project, info in DJANGOS.iteritems() %}
{% set media_url = info.get('media_url', '/media/') %}
{% set static_url = info.get('static_url', '/static/') %}
# {{ project }} server configuration
#
server {
    listen 80;
    listen [::]:80;
    server_name {{ info.get('server_name') }};
    root {{ info.get('root') }};
    location /.well-known {
        alias {{ info.get('root') }}/.well-known;
    }
    location {{ static_url }} {
        alias {{ info.get('static_root') }};
    }
    location {{ media_url }} {
        alias {{ info.get('media_root') }};
    }
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://127.0.0.1:{{ info.get('port') }};
            break;
        }
    }
}
{% endfor %}
