# Default server configuration
#
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;

    index index.html;

    server_name _;

    location / {
	try_files $uri $uri/ =404;
    }

}

{% for site, info in STATICS.iteritems() %}
# {{ site }} server configuration
#
server {
    listen 80;
    listen [::]:80;

    server_name {{ info.get('server_name') }};

    root {{ info.get('root') }};
    index index.html;

    location / {
	try_files $uri $uri/ =404;
    }
}
{% endfor %}
