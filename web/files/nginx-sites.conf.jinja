# Default server configuration
#
server {
    listen 80 default_server;
    root /var/www/html;
    index index.html;
    server_name _;
    location / {
	try_files $uri $uri/ =404;
    }
    location = /info.php {
        allow 127.0.0.1;
        deny all;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_index index.php;
        include fastcgi_params;
    }
}
    
{% for site, info in sites.iteritems() %}
{% set php = info.get('php', False) %}
{% set ssl = info.get('ssl', False) %}

{% if ssl %}
# {{ site }} https redirect
#
server {
       listen         80;
       server_name    {{ info['host'] }};
       return         301 https://$server_name$request_uri;
}
{% endif %}

# {{ site }} server configuration
#
server {
    {% if ssl %}
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/{{ info['host'] }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ info['host'] }}/privkey.pem;
    {% else %}
    listen 80;
    {% endif %}
    root {{ info['root'] }};
    index {% if php %}index.php{% endif %} index.html index.htm;
    server_name {{ info['host'] }};

    {% for location, target in info.get('redirects', {}).iteritems() %}
    location = {{ location }} {
        return 301 {{ target }};
    }
    {% endfor %}

    {% for location, target in info.get('aliases', {}).iteritems() %}
    location {{ location }} {
        alias {{ target }};
    }
    {% endfor %}

    {% for location, target in info.get('proxies', {}).iteritems() %}
    location {{ location }} {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass {{ target }};
        break;
    }
    {% endfor %}

    {% if info.get('rootproxy') %}
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass {{ info['rootproxy'] }};
            break;
        }
    }
    {% else %}
    location / {
	{% if info.get('php', False) %}
	try_files $uri $uri/ /index.php?q=$uri&$args;
	{% else %}
	try_files $uri $uri/ =404;
	{% endif %}
    }
    {% endif %}

    {% if php %}
    location ~ \.php$ {
	try_files $uri =404;
	fastcgi_split_path_info ^(.+\.php)(/.+)$;
	fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	fastcgi_index index.php;
	include fastcgi_params;
    }
    {% endif %}

    location ~ /.well-known {
        allow all;
    }
}
{% endfor %}
